<html>
  <head>
    <meta charset="utf-8"/>
    <meta content="width=device-width, initial-scale=1.0" name="viewport"/>
    <meta content="zfBBZC7U_W-U3H0KTE3TOSnnWSDEvTMQzzE6N7g0_AA" name="google-site-verification"/>
    <link href="/favicon.png" rel="shortcut icon"></link>
    <title>Rails Girls TLV</title>
    <% if I18n.locale == :en %>
      <%= stylesheet_link_tag "http://fonts.googleapis.com/css?family=Cabin:400,600,700" %>
    <% end %>
    <%= stylesheet_link_tag "normalize", "foundation", "lightbox", "site_layout" %>
    <% if t(:direction) == 'rtl' %>
      <%= stylesheet_link_tag "app-rtl" %>
    <% end %>
    <% # Some SEO stuff %>
    <% description = data.page.description || 'Rails Girls Tel-Avivâ€”Yaffo aims at giving girls and women the tools for building their own ideas' %>
    <meta content="<%= description %>" name="description"/>
    <!-- Twitter Card data-->
    <meta name="twitter:card" value="<%= description %>"/>
    <!-- Open Graph data-->
    <meta content="Rails Girls TLV" name="og:title"/>
    <meta content="article" name="og:type"/>
    <meta content="http://railsgirls.co.il/" name="og:url"/>
    <meta content="http://railsgirls.co.il/images/social_networks_image.jpg" name="og:image"/>
    <meta content="<%= description %>" name="og:description"/>
  </head>
  <body>
    <header>
      <div class="background-image background-image-home">

        <nav class="header-navigation center" style="background-color: transparent;">
          <ul>
            <li><%= link_to t('layout.links.home'), localized_url('index.html') %></li>
            <li><%= link_to t('layout.links.events'), localized_url('events.html') %></li>
            <li><%= link_to t('layout.links.after'), localized_url('after.html') %></li>
            <li><%= link_to t('layout.links.team'), localized_url('team.html') %></li>
            <li class="has-dropdown">
              Guides
              <ul class="dropdown">
                <li>
                  <%= link_to t('installation-guide'), external_guide_url('install'), target: '_blank' %>
                </li>
                <li>
                  <%= link_to t('tryruby-tutorial'), "http://tryruby.org", target: '_blank' %>
                </li>
                <li>
                  <%= link_to t('app-guide'), guide_url('app'), target: '_blank' %>
                </li>
              </ul>
            </li>
          </ul>
        </nav>

        <div class="header-title">
          <h1><%= t('layout.main-header') %></h1>
          <h2><%= t('layout.sub-header') %></h2>
        </div>
      </div>
    </header>

    <div class="content center cf">
      <%= yield %>
    </div>

    <footer>
      <div class="center">
        <%= t('layout.footer.text') %>
        <a href="mailto:contact@railsgirls.co.il"><%= t('layout.footer.contact-us') %></a>
        <%= t('layout.footer.follow') %>
        <a href="https://www.facebook.com/railsgirls.telaviv.yaffo" target="_blank"><%= t('layout.footer.facebook') %></a>.
        <h2><%= t('layout.footer.slogan') %></h2>
      </div>

    </footer>

  </body>
  <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.0/jquery.min.js"></script>
  <script type="text/javascript" src="../javascripts/layout.js"></script>
</html>